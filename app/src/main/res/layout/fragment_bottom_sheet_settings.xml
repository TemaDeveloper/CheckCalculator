<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <View
            android:layout_width="30dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/background_view_hide_bottom_sheet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_settings"
            android:textSize="20sp"
            android:textColor="@color/title_text_color"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/nunito"
            android:layout_marginVertical="@dimen/activity_vertical_margin"/>


        <RelativeLayout
            android:id="@+id/lin_share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="4dp"
                android:elevation="4dp"
                android:layout_margin="5dp">

                <ImageView
                    android:padding="8dp"
                    android:elevation="10dp"
                    app:tint="@color/white"
                    android:background="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_img_share"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/card_share"
                android:fontFamily="@font/nunito"
                android:text="@string/sub_title_share"
                android:textColor="@color/title_text_color"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:padding="5dp"
                android:src="@drawable/ic_img_arrow_right"
                app:tint="@color/title_text_color" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lin_feed_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_feedback"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="4dp"
                android:elevation="4dp"
                android:layout_margin="5dp">

                <ImageView
                    android:padding="8dp"
                    android:elevation="10dp"
                    app:tint="@color/white"
                    android:background="@color/green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_img_feedback"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/card_feedback"
                android:fontFamily="@font/nunito"
                android:text="@string/sub_title_feedback"
                android:textColor="@color/title_text_color"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:padding="5dp"
                android:src="@drawable/ic_img_arrow_right"
                app:tint="@color/title_text_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_night_theme_switching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_night_theme_switching"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="4dp"
                android:elevation="4dp"
                android:layout_margin="5dp">

                <ImageView
                    android:padding="8dp"
                    android:elevation="10dp"
                    app:tint="@color/white"
                    android:background="@color/purple_200"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_night"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/card_night_theme_switching"
                android:fontFamily="@font/nunito"
                android:text="@string/sub_title_mode"
                android:textColor="@color/title_text_color"
                android:textSize="16sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/switcher"
                android:layout_width="60dp"
                android:layout_height="35dp"
                app:lottie_rawRes="@raw/switcher"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_change_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="4dp"
                android:elevation="4dp"
                android:layout_margin="5dp">

                <ImageView
                    android:padding="8dp"
                    android:elevation="10dp"
                    app:tint="@color/white"
                    android:background="@color/yellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_language"/>

            </com.google.android.material.card.MaterialCardView>

            <Spinner
                android:id="@+id/spinner_languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="4dp"
                android:elevation="4dp"
                android:layout_margin="5dp">

                <ImageView
                    android:padding="8dp"
                    android:elevation="10dp"
                    app:tint="@color/white"
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_quit"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:fontFamily="@font/nunito"
                android:layout_marginLeft="16dp"
                android:text="@string/title_text_quit"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>