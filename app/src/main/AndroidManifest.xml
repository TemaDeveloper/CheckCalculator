<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com_calculator.java_calculator.checkcalculator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CheckCalculator"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.PersonDataActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CheckCalculator.NoActionBar" />
        <activity
            android:name=".activities.profilePersonolized.UpdateActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CheckCalculator.NoActionBar" />
        <activity
            android:name=".activities.profilePersonolized.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CheckCalculator.NoActionBar" />
        <activity
            android:name=".activities.CheckDataActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CheckCalculator.NoActionBar" />
        <activity
            android:name=".activities.auth.ForgetPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CheckCalculator.NoActionBar" />
        <activity
            android:name=".activities.auth.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CheckCalculator.NoActionBar" />
        <activity
            android:name=".activities.auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CheckCalculator.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CheckCalculator.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>